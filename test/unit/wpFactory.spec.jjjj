describe('when content gets added via WPCardFactory', function() {
  beforeEach(module('BlogBook'));

  
    var httpBackend;
    beforeEach(inject(function($httpBackend) {
      httpBackend = $httpBackend
      httpBackend
        .when("GET", "http://localhost:3000/WPComSample.json")
        .respond(
        { posts: [
            {
              ID: 85,
              title: "Huhu World",
              author: {nice_name: "autorenname"},
              date: "2015-02-16T22:41:02+00:00",
              excerpt: "great excerpt",
              featured_image: "https://1.gravatar.com/avatar/abf885ab5df3753ff1644e12d9e9c46c?s=96&d=identicon&r=G",
              URL: "http://lilylostinlondon.wordpress.com"
            }
          ]
        }
      );
    }));

    

    it('displays search results', function() {
      scope.addWPCard('http://localhost:3000/WPComSample.json', 0);
      scope.$apply();
      httpBackend.flush();
      expect(scope.cards[0].title).toEqual(posts[0].title);
    });
  });